{
  "openapi": "3.0.1",
  "info": {
    "title": "DarajaAPI",
    "description": "Originally for madonna but now just a payment service using daraja c2b",
    "contact": {
      "name": "Ian",
      "email": "iangatumu@gmail.com"
    },
    "license": {
      "name": "License - (MIT)"
    },
    "version": "1.0"
  },
  "paths": {
    "/api/v1/Auth/Register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterRequestDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterRequestDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterRequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/v1/Auth/Login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequestDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequestDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Mail/send": {
      "post": {
        "tags": [
          "Mail"
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "ToEmail": {
                    "type": "string"
                  },
                  "Subject": {
                    "type": "string"
                  },
                  "Body": {
                    "type": "string"
                  },
                  "Attachments": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    }
                  }
                }
              },
              "encoding": {
                "id": {
                  "style": "form"
                },
                "ToEmail": {
                  "style": "form"
                },
                "Subject": {
                  "style": "form"
                },
                "Body": {
                  "style": "form"
                },
                "Attachments": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Mail/welcome": {
      "post": {
        "tags": [
          "Mail"
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "ToEmail": {
                    "type": "string"
                  },
                  "UserName": {
                    "type": "string"
                  }
                }
              },
              "encoding": {
                "id": {
                  "style": "form"
                },
                "ToEmail": {
                  "style": "form"
                },
                "UserName": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/v1/mpesa/callback/confirmation": {
      "post": {
        "tags": [
          "MpesaCallback"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MpesaC2B"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/MpesaC2B"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/MpesaC2B"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/v1/mpesa/callback/validation": {
      "post": {
        "tags": [
          "MpesaCallback"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MpesaValidationRequestDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/MpesaValidationRequestDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/MpesaValidationRequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/v1/mpesa/payments/initiate": {
      "post": {
        "tags": [
          "MpesaPayment"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentRequestDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentRequestDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentRequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/v1/mpesa/payments/simulate-lipa-na": {
      "post": {
        "tags": [
          "MpesaPayment"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LipaNaSimulationRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/LipaNaSimulationRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/LipaNaSimulationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/v1/mpesa/registration/urls": {
      "post": {
        "tags": [
          "MpesaRegistration"
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LipaNaSimulationRequest": {
        "required": [
          "accountNumber",
          "amount",
          "phoneNumber"
        ],
        "type": "object",
        "properties": {
          "accountNumber": {
            "maxLength": 20,
            "minLength": 20,
            "type": "string"
          },
          "amount": {
            "minimum": 1,
            "type": "number",
            "format": "double"
          },
          "phoneNumber": {
            "minLength": 1,
            "pattern": "^2547\\d{8}$",
            "type": "string"
          },
          "transactionReference": {
            "maxLength": 20,
            "minLength": 0,
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LoginRequestDto": {
        "required": [
          "password",
          "userName"
        ],
        "type": "object",
        "properties": {
          "userName": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 1,
            "type": "string",
            "format": "password"
          }
        },
        "additionalProperties": false
      },
      "MpesaC2B": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "transactionType": {
            "type": "string",
            "nullable": true
          },
          "transID": {
            "type": "string",
            "nullable": true
          },
          "transTime": {
            "type": "string",
            "nullable": true
          },
          "transAmount": {
            "type": "string",
            "nullable": true
          },
          "businessShortCode": {
            "type": "string",
            "nullable": true
          },
          "billRefNumber": {
            "type": "string",
            "nullable": true
          },
          "invoiceNumber": {
            "type": "string",
            "nullable": true
          },
          "orgAccountBalance": {
            "type": "string",
            "nullable": true
          },
          "thirdPartyTransID": {
            "type": "string",
            "nullable": true
          },
          "msisdn": {
            "type": "string",
            "nullable": true
          },
          "firstName": {
            "type": "string",
            "nullable": true
          },
          "middleName": {
            "type": "string",
            "nullable": true
          },
          "lastName": {
            "type": "string",
            "nullable": true
          },
          "isVerified": {
            "type": "boolean"
          },
          "verificationDate": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "verificationResult": {
            "type": "string",
            "nullable": true
          },
          "retryCount": {
            "type": "integer",
            "format": "int32"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "MpesaValidationRequestDto": {
        "type": "object",
        "properties": {
          "transactionType": {
            "type": "string",
            "nullable": true
          },
          "transID": {
            "type": "string",
            "nullable": true
          },
          "transTime": {
            "type": "string",
            "nullable": true
          },
          "transAmount": {
            "type": "string",
            "nullable": true
          },
          "businessShortCode": {
            "type": "string",
            "nullable": true
          },
          "billRefNumber": {
            "type": "string",
            "nullable": true
          },
          "invoiceNumber": {
            "type": "string",
            "nullable": true
          },
          "orgAccountBalance": {
            "type": "string",
            "nullable": true
          },
          "thirdPartyTransID": {
            "type": "string",
            "nullable": true
          },
          "msisdn": {
            "type": "string",
            "nullable": true
          },
          "firstName": {
            "type": "string",
            "nullable": true
          },
          "middleName": {
            "type": "string",
            "nullable": true
          },
          "lastName": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "PaymentRequestDto": {
        "type": "object",
        "properties": {
          "phoneNumber": {
            "type": "string",
            "nullable": true
          },
          "amount": {
            "type": "number",
            "format": "double"
          },
          "referenceNumber": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "RegisterRequestDto": {
        "required": [
          "password",
          "roles",
          "userName"
        ],
        "type": "object",
        "properties": {
          "userName": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 1,
            "type": "string",
            "format": "password"
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
}